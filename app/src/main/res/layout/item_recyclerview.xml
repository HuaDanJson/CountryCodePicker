<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="#262242">
    
    <TextView
        android:id="@+id/tv_group"
        style="@style/TextStyleRobotoMedium"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="A"
        tools:visibility="visible" />
    
    <LinearLayout
        android:id="@+id/ll_country_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/selector_select_country_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            tools:src="@drawable/flag_ad" />
        
        <TextView
            android:id="@+id/tv_country_name"
            style="@style/TextStyleRobotoMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="@color/white90"
            android:textSize="16sp"
            tools:text="Saint Vincent and the Grenadines" />
        
        <TextView
            android:id="@+id/tv_country_code"
            style="@style/TextStyleRobotoMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/white90"
            android:textSize="16sp"
            tools:text="+93" />
    
    </LinearLayout>

</LinearLayout>